{
  "compilerOptions": {
    "target": "ESNext",                  // Workers runtime supports modern JS
    "module": "ESNext",                  // ES modules for imports/exports
    "moduleResolution": "bundler",       // Optimized for bundlers like Wrangler/esbuild
    "lib": ["ESNext"],                   // Include latest JS features
    "outDir": "./dist",                  // Output directory (Wrangler handles bundling)
    "rootDir": "./src",                  // Source directory (adjust as needed)
    "strict": true,                      // Full type safety
    "esModuleInterop": true,             // Better CommonJS/ESM interop
    "allowSyntheticDefaultImports": true, // For default imports from CommonJS
    "skipLibCheck": true,                // Skip type checking of declaration files (speed)
    "resolveJsonModule": true,           // Allow importing .json files
    "isolatedModules": true,             // For esbuild compatibility
    "noEmit": true,                      // No JS output (Wrangler compiles)
    "types": [
      "@cloudflare/workers-types",       // Core Workers APIs
      "./types/env.d.ts"                 // Generated bindings (from `wrangler types`)
    ]
  },
  "include": [
    "src/**/*.ts",                       // Your source files
    "types/**/*.d.ts"                    // Generated types
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}